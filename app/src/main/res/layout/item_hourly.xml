<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/_75sdp"
    android:layout_height="@dimen/_110sdp">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_time_hourly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_4sdp"
        android:gravity="center"
        android:textColor="@color/gray"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1pm" />

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/img_icon_hourly"
        android:layout_width="@dimen/_20sdp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        android:layout_height="@dimen/_20sdp"
        app:layout_constraintBottom_toTopOf="@+id/txt_temp_hourly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_time_hourly" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_temp_hourly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_15sdp"
        android:textColor="@color/white"
        android:textSize="@dimen/_13ssp"
        app:layout_constraintBottom_toTopOf="@+id/txt_date_hourly"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="29Â°" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/txt_date_hourly"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_4sdp"
        android:textColor="@color/gray"
        android:textSize="@dimen/_8ssp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="11/5/2021" />

</androidx.constraintlayout.widget.ConstraintLayout>